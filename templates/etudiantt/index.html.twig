{% extends 'base.html.twig' %}

{% block title %}Liste des Étudiants{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des Étudiants</h1>

        <div class="text-end mb-3">
            <a href="{{ path('app_etudiantt_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter un Étudiant
            </a>
        </div>

        <table class="table table-striped table-hover table-bordered shadow">
            <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">NCE</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for etudiantt in etudiantts %}
                <tr>
                    <td>{{ etudiantt.id }}</td>
                    <td>{{ etudiantt.nom }}</td>
                    <td>{{ etudiantt.prenom }}</td>
                    <td>{{ etudiantt.nce }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_etudiantt_show', {'id': etudiantt.id}) }}" class="btn btn-primary btn-sm me-1">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_etudiantt_edit', {'id': etudiantt.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun étudiant trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
