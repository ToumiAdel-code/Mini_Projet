{% extends 'base.html.twig' %}

{% block title %}Détails de l'Étudiant{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Détails de l'Étudiant</h1>

        <div class="card shadow p-4">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ etudiantt.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ etudiantt.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ etudiantt.prenom }}</td>
                </tr>
                <tr>
                    <th scope="row">NCE</th>
                    <td>{{ etudiantt.nce }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_etudiantt_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_etudiantt_edit', {'id': etudiantt.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            {{ include('etudiantt/_delete_form.html.twig', { 'attr': { 'class': 'd-inline' } }) }}
        </div>
    </div>
{% endblock %}
