{% extends 'base.html.twig' %}

{% block title %}Liste des Soutenances{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Liste des Soutenances</h1>

        <div class="text-end mb-3">
            <a href="{{ path('app_soutenance_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter une Soutenance
            </a>
        </div>

        <table class="table table-striped table-hover table-bordered shadow">
            <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Numéro de Jury</th>
                <th scope="col">Date de Soutenance</th>
                <th scope="col">Note</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for soutenance in soutenances %}
                <tr>
                    <td>{{ soutenance.id }}</td>
                    <td>{{ soutenance.numjury }}</td>
                    <td>{{ soutenance.dateSoutenance ? soutenance.dateSoutenance|date('Y-m-d') : '' }}</td>
                    <td>{{ soutenance.note }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_soutenance_show', {'id': soutenance.id}) }}" class="btn btn-primary btn-sm me-1">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_soutenance_edit', {'id': soutenance.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
